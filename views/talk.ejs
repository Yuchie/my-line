					// socket.emit('msg', $('#form1 [name=txt]').val());
					$("#msg").text(msg);
					//空にする
					$('#form1 [name=txt]').val('');
				});
			});
			// socket.on('msg', function(data){
			// 	$('div').prepend(data+'<br>');
			// });
		</script>
	</head>
	<body>
		<h1><%= title %></h1>
		<p>Welcome to <%= title %></p>
		<div id="msg"></div>
		<form method="post" name="form1" id="form1" action="">
			<input type="text" name="txt" value="" />
			<button type="button" name="btn" id="btn">submit</button>
		</form>
	</body>
